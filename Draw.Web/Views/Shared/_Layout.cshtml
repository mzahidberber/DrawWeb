<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type"
          content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DrawCAD</title>
    @await Html.PartialAsync("_importCss")
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 p-0 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">DrawCAD</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DrawCAD">Doc</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DrawApi">Api</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DrawGeo">Geo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DrawAuth">Auth</a>
                        </li>
                    </ul>
                </div>
                <div >
                    <a href="https://www.linkedin.com/in/mzahidberber/"><img src="~/img/linkedin.png" style="height:25px;width:25px;" alt=""></a>
                    <a href="https://github.com/mzahidberber"><img src="~/img/githup.png" style="height:25px;width:25px;" alt=""></a>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container mt-3">
            <div class="row">
                <div class="col-10">&copy; 2023 - DrawCAD </div>
                <div class="col-2">
                    <a href="https://www.linkedin.com/in/mzahidberber/"><img src="~/img/linkedin.png" style="height:25px;width:25px;" alt=""></a>
                    <a href="https://github.com/mzahidberber"><img src="~/img/githup.png" style="height:25px;width:25px;" alt=""></a>
                </div>
                
            </div>
            

            
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script type="module" src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
