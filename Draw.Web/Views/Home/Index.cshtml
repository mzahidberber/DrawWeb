
@model TitleListViewModel
@{
    Model.MainTitles.ForEach((mt) =>
    {
        mt.BaseTitles.ForEach((bt) =>
        {
            bt.SubTitles = bt.SubTitles.OrderBy(x => x.Id).ToList();
        });
    });

    ViewBag.HtmlUrl = "wwwroot/files/home/";
}

<header>
    <div class="container-fluid mt-5 homeBack">
        <div class="jumbotron text-white h-100 w-100 d-flex justify-content-center align-items-center">
            <div class="container">
                <div class="row w-100 align-items-center">
                    <div class="col-md-8 ">
                        <div style="width:100%;height:100%;">
                            <iframe class="homeVideo" src="https://www.youtube.com/embed/b2TmVrDe6FY?list=PLKcWTdbtsdq0MLDP-QKujGlLII9SSO5Td&autoplay=1&mute=1" title="DrawCAD" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                        </div>
                    
                </div>
                    <div class="col-md-4">
                    <h1 >DrawCAD</h1>
                        <a href="https://github.com/mzahidberber/DrawCAD">
                            <div class="btn-group mt-3" role="group" aria-label="Button group with nested dropdown">
                                <button type="button" class="btn btn-secondary btn-lg text-light">İndir</button>
                                <button type="button" class="btn btn-secondary btn-lg me-0 ms-0 pe-0 ps-0" disabled></button>
                                <button type="button" class="btn btn-secondary btn-lg"><img src="~/img/githup.png" style="height:1.5rem;width:1.5rem;" alt="" /></button>
                            </div>
                        </a>
                </div>
            </div>
        </div>
    </div>
    </div>
</header>

<body>
    <div class="row ms-2 me-2">



        <div class="col-lg-12 col-xl-2 col-hide leftToggleNav">
            <div class="sticky-top">
                @await Html.PartialAsync("_HomeTitle",Model)

            </div>


        </div>

        <div class="col-lg-12 col-xl-8">
            <div>
                @await Html.PartialAsync("_HomeMain",Model)
            </div>
        </div>
        <div class="col-lg-12 col-xl-2 col-hide">
            <div class="sticky-top">
                @await Html.PartialAsync("_HomeRight",Model)

            </div>
        </div>



    </div>

    <button type="button" id="toogleBtn" class="btn btn-light toogleBtn"><img src="~/img/menu.png" style="height:1.5rem;width:1.5rem;" alt="" /></button>
    <div id="toogleNav" class="toogleNav dropdown-menu">
    </div>

</body>


